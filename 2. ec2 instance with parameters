# create a EC2 instance with parameters
# Fill blank space with your account credentials
# EC2 instance ami and key name is must be specified within region
# Instance will launch within default VPC

provider "aws" {
  access_key = "******************"
  secret_key = "*********************"
  region     = "**************"
}

resource "aws_instance" "instance" {
  ami           = "ami-**********"
  instance_type = "***********" 
  availability_zone ="**************"
  key_name = "****************"
  monitoring ="****" #true/false
  security_groups = ["security-group"]
  tags {
       Name     = "practice"
       }
}

# Define Security Group for Instance
 resource "aws_security_group" "instance" {
 name = "security-group"
    ingress {
         from_port = 22
         to_port = 22
          protocol = "tcp"
          cidr_blocks = ["0.0.0.0/0"]
             }
}
