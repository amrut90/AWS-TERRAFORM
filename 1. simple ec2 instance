# create a simple EC2 instance
# Fill blank space with your account credentials
# EC2 instance ami is must be specified within region

provider "aws" {
  access_key = "******************"
  secret_key = "*********************"
  region     = "**************"
}

resource "aws_instance" "instance" {
  ami           = "ami-**********"
  instance_type = "t2.micro" 
  tags {
       Name     = "practice"
       }
}
 
